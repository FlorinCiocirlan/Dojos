while True:
    print("Enter 'quit' to quit programm")
    print("Enter 'add' to add 2 numbers")
    print("Enter 'addition' to make the sum of 2 numbers")
    print("Enter 'multiplication' to multiply 2 numbers")
    print("Enter 'divide' to divide 2 numbers")
    user_input = input(":")
    if user_input == quit:
        print("Programm is stoped")
        break
    elif user_input == "add":
        num1 = int(input("First number :"))
        num2 = int(input("Second number :"))
        print(str(num1), str(num2))
    elif user_input == "addition":
        num1 = int(input("First number: "))
        num2 = int(input("Second number: "))
        result = num1+num2
        print("The result is " , result)
    elif user_input == "multiplication":
        num1 = int(input("First number: "))
        num2 = int(input("Second number: "))
        result = num1*num2
        print("Multiplication of the number is " , result)
    elif user_input == "divide":
        num1 = int(input("First number: "))
        num2 = int(input("Second number: "))
        result = num1/num2
        print("Dividation of the number is " , int(result))
    else:
        print("Unknown Input")